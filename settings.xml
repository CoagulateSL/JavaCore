<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <activeProfiles>
    <activeProfile>github</activeProfile>
  </activeProfiles>

  <profiles>
    <profile>
      <id>github</id>
      <repositories>
        <repository>
          <id>javacore</id>
          <name>GitHub IPrice/JavaCore Apache Maven Packages</name>
          <url>https://maven.pkg.github.com/iprice/JavaCore</url>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <servers>
    <server>
      <id>javacore</id>
      <username>iprice</username>
      <password>${{ secrets.GITHUB_TOKEN }}</password>
    </server>
  </servers>
</settings>
